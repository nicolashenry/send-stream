{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "importHelpers": true,
    "composite": true,
    "noImplicitOverride": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "typeRoots": ["./node_modules/@types/"]
  }
}
